{

  "manifest_version": 2,
  "name": "fast-access-search-bar",
  "version": "1.5.1",

  "description": "Fast Access Search Bar",
  "icons": {
    "48": "icons/fast-access-search-bar-48.png"
  },
  
  "browser_action": {
    "default_icon": {
     "48" : "icons/fast-access-search-bar-48.png"
    },
    "default_title": "Fast Access Search Bar",
    "browser_style" : true,
    "default_area" : "navbar",
    "default_popup": "popup/fast-access-search-bar.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Q"
      }
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "fast-access-search-bar@fnord"
    }
  },  

  "permissions": [
    "storage"
  ]
    
}
